
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Core Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function canManageProperty(propertyId) {
        // Safely access data property only if the document exists
        let propertyDoc = get(/databases/$(database)/documents/properties/$(propertyId));
        return propertyDoc.exists && isOwner(propertyDoc.data.ownerId);
    }

    // --- Properties Collection ---
    match /properties/{propertyId} {
      allow read: if true; // Public read access is needed for the server action
      allow write: if canManageProperty(propertyId) || (request.method == 'create' && isOwner(request.resource.data.ownerId));

      // --- Subcollections ---
      match /reviews/{reviewId} {
        allow read: if true; // Public read access
        allow create: if isSignedIn(); // Any signed-in user (incl. anonymous) can create a review
        allow update, delete: if canManageProperty(propertyId);
      }

      match /faqs/{faqId} {
        allow read: if true; // Public read access
        allow write: if canManageProperty(propertyId);
      }
      
      match /recommendations/{recommendationId} {
        allow read: if true; // Public read access
        allow write: if canManageProperty(propertyId);
      }

      match /bookingInquiries/{inquiryId} {
        allow create: if isSignedIn();
        allow read, update: if canManageProperty(propertyId);
      }

      // --- ChatLogs Subcollection ---
      match /chatLogs/{clientId} {
        // CREATE: Allow owner to create the log, which the server action does.
        allow create: if canManageProperty(propertyId);

        // UPDATE: Allow the client who owns this log OR the property owner to add messages.
        allow update: if isOwner(clientId) || canManageProperty(propertyId);

        // READ / LIST: Allow the client owner or a property manager to view.
        allow read: if isOwner(clientId) || canManageProperty(propertyId);
        
        // LIST: Deny collection list to prevent data leakage.
        allow list: if false;

        // DELETE: Denied from client.
        allow delete: if false;
      }
    }

    // --- Top-Level Collections ---
    match /owners/{ownerId} {
      allow read: if true; // Public read access for profile pages
      allow create: if isSignedIn() && isOwner(ownerId);
      allow update: if isSignedIn() && isOwner(ownerId);

      match /inquiries/{inquiryId} {
          // This subcollection is for sales/premium inquiries.
          // Allow owner to create, but only superadmins can manage.
          allow create: if isOwner(ownerId);
          allow read, update, delete: if false; // Reverted superadmin logic for now
      }
    }

    match /clients/{clientId} {
      // **CRITICAL FIX**: Allow any signed-in user (including anonymous visitors
      // authenticated by the server action) to create/update their own client document.
      // This is required to register them on their first interaction.
      allow read, create, update: if isSignedIn() && isOwner(clientId);
      allow delete: if false;
    }
  }
}
