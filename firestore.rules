
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Core Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // ðŸ”‘ CRITICAL FIX: Use Database Check (must be active for privileges to work)
    function isSuperAdmin() {
      // Checks if the user's UID exists as a document in the 'superAdmins' collection.
      return request.auth != null && exists(/databases/$(database)/documents/superAdmins/$(request.auth.uid));
    }
    
    // --- SuperAdmins Collection (STABLE FIX: Breaks the circular list dependency) ---
    match /superAdmins/{userId} {
        // 1. Client Read (get): Allows the user to read their own document to get their role.
        allow get: if isOwner(userId);
        
        // 2. Client Query (list): Allow a confirmed SuperAdmin to list the collection.
        // This prevents the circular dependency while allowing admins to see each other.
        allow list: if isSuperAdmin();

        // 3. Prevent write access.
        allow write: if false;
    }

    // --- Property Matches ---
    match /properties/{propertyId} {
      allow read: if true; 
      
      // Owners can write to their own properties. SuperAdmins can write to any.
      allow write: if isSignedIn() && (isOwner(get(/databases/$(database)/documents/properties/$(propertyId)).data.ownerId) || isSuperAdmin() || (request.method == 'create' && isOwner(request.resource.data.ownerId)));

      // --- Subcollections ---
      match /reviews/{reviewId} {
        allow read, create: if true;
        // Owners or SuperAdmins can moderate reviews.
        allow update, delete: if isSignedIn() && (isOwner(get(/databases/$(database)/documents/properties/$(propertyId)).data.ownerId) || isSuperAdmin());
      }

      match /faqs/{faqId} {
        allow read: if true;
        // Owners or SuperAdmins can manage FAQs.
        allow write: if isSignedIn() && (isOwner(get(/databases/$(database)/documents/properties/$(propertyId)).data.ownerId) || isSuperAdmin());
      }
      
      match /recommendations/{recommendationId} {
        allow read: if true;
        // Owners or SuperAdmins can manage recommendations.
        allow write: if isSignedIn() && (isOwner(get(/databases/$(database)/documents/properties/$(propertyId)).data.ownerId) || isSuperAdmin());
      }

      match /bookingInquiries/{inquiryId} {
        allow create: if isSignedIn();
        // Owners or SuperAdmins can manage booking inquiries.
        allow read, update: if isSignedIn() && (isOwner(get(/databases/$(database)/documents/properties/$(propertyId)).data.ownerId) || isSuperAdmin());
      }

      // --- ChatLogs Subcollection: FINAL STABLE STRUCTURE ---
      match /chatLogs/{clientId} {
        
        // Define helper functions (keep them for management read/list checks)
        function propertyOwnerId() {
            return get(/databases/$(database)/documents/properties/$(propertyId)).data.ownerId;
        }
        
        function canManageChat() {
            // Includes the exists() guardrail for stability
            return exists(/databases/$(database)/documents/properties/$(propertyId)) && (
                isOwner(propertyOwnerId()) || 
                isSuperAdmin()
            );
        }
        
        // 1. DENY ALL DIRECT WRITES: All writes (create/update) must go through the Cloud Function.
        allow write: if false; 
        
        // 2. READ ACCESS: Visitor can read their own log (for real-time updates). Management can read/list all.
        allow read, list: if isOwner(clientId) || canManageChat();
      }
    }

    // --- Top-Level Collections ---
    match /owners/{ownerId} {
      allow read: if true;
      allow create: if isSignedIn() && isOwner(ownerId);
      // An owner can update their own profile, or a SuperAdmin can update any profile.
      allow update: if isSignedIn() && (isOwner(ownerId) || isSuperAdmin());

      match /inquiries/{inquiryId} {
          allow create: if isSignedIn() && isOwner(ownerId);
          // Only SuperAdmins can manage sales inquiries.
          allow read, update, delete: if isSuperAdmin();
      }
    }

    match /clients/{clientId} {
      // ðŸ”‘ FIX: Allow the current user (including anonymous) to CREATE the document 
      // with their own UID, and READ it. This is secure because of the isOwner check.
      allow read, create: if isOwner(clientId);
      
      // Also keep the management access for reading client data:
      allow read: if isSuperAdmin() || (resource.data.ownerId != null && isOwner(resource.data.ownerId));

      // Deny updates/deletes from the client side.
      allow update, delete: if false;
    }
  }
}
