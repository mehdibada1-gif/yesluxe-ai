
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Core Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function canManageProperty(propertyId) {
        // Safely access data property only if the document exists
        let propertyDoc = get(/databases/$(database)/documents/properties/$(propertyId));
        return propertyDoc.exists && isOwner(propertyDoc.data.ownerId);
    }

    // --- Properties Collection ---
    match /properties/{propertyId} {
      // Allow public read for visitor pages, which use the client SDK on the server
      allow read: if true;
      allow write: if canManageProperty(propertyId) || (request.method == 'create' && isOwner(request.resource.data.ownerId));

      // --- Subcollections ---
      match /reviews/{reviewId} {
        // Allow public read for visitor pages
        allow read: if true;
        allow create: if true;
        allow update, delete: if canManageProperty(propertyId);
      }

      match /faqs/{faqId} {
        // Allow public read for visitor pages
        allow read: if true;
        allow write: if canManageProperty(propertyId);
      }
      
      match /recommendations/{recommendationId} {
        // Allow public read for visitor pages
        allow read: if true;
        allow write: if canManageProperty(propertyId);
      }

      match /bookingInquiries/{inquiryId} {
        allow create: if isSignedIn();
        allow read, update: if canManageProperty(propertyId);
      }

      // --- ChatLogs Subcollection ---
      match /chatLogs/{clientId} {
        // CREATE: Denied. Must be handled by a trusted server process (Server Action).
        allow create: if false; 

        // UPDATE: Allow the client who owns this log to add messages.
        allow update: if isOwner(clientId);

        // READ / LIST: Allow the client owner or a property manager to view.
        allow read, list: if isOwner(clientId) || canManageProperty(propertyId);

        // DELETE: Denied from client.
        allow delete: if false;
      }
    }

    // --- Top-Level Collections ---
    match /owners/{ownerId} {
      // Allow public read for profile pages
      allow read: if true; 
      allow create: if isSignedIn() && isOwner(ownerId);
      allow update: if isSignedIn() && isOwner(ownerId);

      match /inquiries/{inquiryId} {
          // This subcollection is for sales/premium inquiries.
          // Allow owner to create, but only superadmins can manage.
          allow create: if isOwner(ownerId);
          allow read, update, delete: if false; // Reverted superadmin logic for now
      }
    }

    match /clients/{clientId} {
      // Clients can read their own document.
      allow read: if isOwner(clientId);
      
      // **CRITICAL FIX**: Allow the Visitor to create/update their own document,
      // which is required by the server action to register them on first interaction.
      allow create, update: if isSignedIn() && isOwner(clientId);
      
      allow delete: if false;
    }
  }
}
